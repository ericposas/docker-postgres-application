{
  "files": ["./src/index.tsx"],
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types"],
    "jsx": "react",
    "lib": ["es6", "dom"],
    "rootDir": "src",
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "include": ["./src"],
  "exclude": ["node_modules", "build"],
  "typeAcquisition": {
    "include": ["jest"]
  }
}
